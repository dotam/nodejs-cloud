<div ng-show="tab === 1"> 
  <div class="sensor-info">
      <div class="row">
        <div class="col-md-3">
            <p>Group :  {{sensorDetail.groupName}}</p>
            <p>Tenant : {{sensorDetail.tenantName}}</p>
            <p>User : {{sensorDetail.userName}}</p>
        </div>
      </div>
  </div>
</div>          
<div ng-show="tab === 2"> 
  <div id="history">
        <div class="row">
            <div ng-repeat="item in topFive">
              <div class="history-item col-md-2">
                <p><img src="./images/time.png" width="20" height="20">{{item.createDate| date:'yyyy-MM-dd HH:mm:ss'}}</p>
                <hr>
                <p><img src="./images/h2s.png" width="20" height="20">H2S :{{item.h2s}}</p>
                <p><img src="./images/t.png" width="20" height="20">Temperature : {{item.temp}} Â°C</p>
                <p><img src="./images/heart.png" width="20" height="20">Heartbeat : {{item.heartbeat}}</p>
              </div>
            </div>
        </div>
  </div>
</div> 
<div ng-show="tab ===3">
  <div class="row pull-left export-config">
    <div class="col-md-3">
      <img ng-click="exportFile()" src="./images/pdf.png">
    </div>
    <div class="col-md-3">
      <img src="./images/word.png">
    </div>
    <div class="col-md-3">
      <img src="./images/excel.png">
    </div>
    <div class="col-md-3">
      <img src="./images/cvs.png">
    </div>
  </div>
</div>
